@model CoderDojoMKE.Web.Models.View.CreateNewNinjaViewModel

<!-- Modal -->
<div id="createNewModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create a new ninja</h4>
            </div>
            <div class="modal-body">
                <div class="createNinjaInputsContainer">
                    @Html.Partial("_CreateNewNinjaInputs", Model)
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" id="createNinjaSubmit" class="btn btn-primary">Create</button>
                <button type="button" id="createNinjaCancel" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
