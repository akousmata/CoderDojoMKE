@model CoderDojoMKE.Web.Models.View.EventSignupViewModel

@{
    ViewBag.Title = "Signup | Coder Dojo MKE";
}

<h2>SIGN UP</h2>

@Html.DisplayFor(model => model)

@section scripts {
    <script type="text/javascript">
        var selectableEnrollees = [
            @for(int i = 0; i < Model.SelectableEnrollees.Count; i++)
            {
                if(i < Model.SelectableEnrollees.Count - 1)
                {
                    @Html.Raw("{'Name':'" + Model.SelectableEnrollees[i].Text + "', 'ID':'" + Model.SelectableEnrollees[i].Value + "', 'Selected': '" + Model.SelectedEnrollees.Contains(Guid.Parse(Model.SelectableEnrollees[i].Value)).ToString().ToLower() + "'},")
                }
                else
                {
                    @Html.Raw("{'Name':'" + Model.SelectableEnrollees[i].Text + "', 'ID':'" + Model.SelectableEnrollees[i].Value + "', 'Selected': '" + Model.SelectedEnrollees.Contains(Guid.Parse(Model.SelectableEnrollees[i].Value)).ToString().ToLower() + "'}")
                }
            }
        ];
    </script>
}