@model CoderDojoMKE.Web.Models.View.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password | Coder Dojo MKE";
}

<h2>CHANGE PASSWORD</h2>

<div class="main-content">
    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Change Password Form</h4>
        @Html.ValidationSummary(false, "Please fix the following errors")
        <div class="indicates-required"><span class="asterisk">*</span> indicates required</div>
        <hr />        
        <div class="form-field-group">
            <label for="OldPassword">Old Password <span class="asterisk">*</span></label>
            @Html.PasswordFor(m => m.OldPassword)
        </div>

        <div class="form-field-group">
            <label for="NewPassword">New Password <span class="asterisk">*</span></label>
            @Html.PasswordFor(m => m.NewPassword)
        </div>

        <div class="form-field-group">
            <label for="ConfirmPassword">Confirm Password <span class="asterisk">*</span></label>
            @Html.PasswordFor(m => m.ConfirmPassword)
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Change Password" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}