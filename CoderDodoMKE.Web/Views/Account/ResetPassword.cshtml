@model CoderDojoMKE.Web.Models.View.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password | Coder Dojo MKE";
}

<h2>RESET PASSWORD</h2>
<div class="main-content">
    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Reset your password</h4>
        <hr />

        @Html.ValidationSummary(false, "Please fix the following errors")
        <div class="indicates-required"><span class="asterisk">*</span> indicates required</div>

        @Html.HiddenFor(model => model.Code)
        @Html.HiddenFor(model => model.Email)

        <div class="form-field-group">
            <label for="Password">Password <span class="asterisk">*</span></label>
            @Html.PasswordFor(m => m.Password)
        </div>
        <div class="form-field-group">
            <label for="ConfirmPassword">Confirm Password <span class="asterisk">*</span></label>
            @Html.PasswordFor(m => m.ConfirmPassword)
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" class="btn btn-primary" value="Reset" />
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
