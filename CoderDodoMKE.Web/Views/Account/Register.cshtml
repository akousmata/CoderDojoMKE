@model CoderDojoMKE.Web.Models.View.RegisterViewModel
@{
    ViewBag.Title = "Register | CoderDojo MKE";
}

<h2>REGISTER</h2>

<div class="main-content col-md-12">

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <h4>Create a new account</h4>
        <hr />
        @Html.ValidationSummary(false, "Please fix the following errors")
        <div class="indicates-required"><span class="asterisk">*</span> indicates required</div>
        <div class="col-md-8">
            <div class="form-field-group">
                <label for="FirstName">First Name <span class="asterisk">*</span></label>
                @Html.TextBoxFor(m => m.FirstName)
            </div>
            <div class="form-field-group">
                <label for="LastName">Last Name <span class="asterisk">*</span></label>
                @Html.TextBoxFor(m => m.LastName)
            </div>
            <div class="form-field-group">
                <label for="Email">Email <span class="asterisk">*</span></label>
                @Html.TextBoxFor(m => m.Email)
            </div>
            <div class="form-field-group">
                <label for="Password">Password <span class="asterisk">*</span></label>
                @Html.PasswordFor(m => m.Password)
            </div>
            <div class="form-field-group">
                <label for="ConfirmPassword">Confirm Password <span class="asterisk">*</span></label>
                @Html.PasswordFor(m => m.ConfirmPassword)
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn btn-primary" value="Register" />
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    Privacy information
                </div>
                <div class="panel-body">
                    Coder Dojo MKE will not use your information for any purpose other than to contact you about sessions you
                    have signed up for and to notify you when new sessions are available.  We do not share your private information 
                    with anyone. Period.
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
